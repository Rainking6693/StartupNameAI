{
  "ci": {
    "collect": {
      "url": [
        "https://startupnamer.org/",
        "https://startupnamer.org/naming-tool/",
        "https://startupnamer.org/pricing/",
        "https://startupnamer.org/features/",
        "https://startupnamer.org/how-it-works/",
        "https://startupnamer.org/tech-startup-names/",
        "https://startupnamer.org/saas-startup-names/",
        "https://startupnamer.org/ai-startup-names/"
      ],
      "numberOfRuns": 5,
      "settings": {
        "chromeFlags": "--no-sandbox --disable-dev-shm-usage",
        "preset": "desktop",
        "onlyCategories": ["performance", "accessibility", "best-practices", "seo"],
        "throttling": {
          "rttMs": 40,
          "throughputKbps": 10240,
          "cpuSlowdownMultiplier": 1,
          "requestLatencyMs": 0,
          "downloadThroughputKbps": 0,
          "uploadThroughputKbps": 0
        }
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["error", {"minScore": 0.85}],
        "categories:accessibility": ["error", {"minScore": 0.95}],
        "categories:best-practices": ["error", {"minScore": 0.9}],
        "categories:seo": ["error", {"minScore": 0.95}],
        
        "first-contentful-paint": ["error", {"maxNumericValue": 2000}],
        "largest-contentful-paint": ["error", {"maxNumericValue": 2500}],
        "cumulative-layout-shift": ["error", {"maxNumericValue": 0.1}],
        "total-blocking-time": ["error", {"maxNumericValue": 200}],
        "speed-index": ["error", {"maxNumericValue": 3500}],
        
        "server-response-time": ["error", {"maxNumericValue": 600}],
        "interactive": ["warn", {"maxNumericValue": 3500}],
        "first-meaningful-paint": ["warn", {"maxNumericValue": 2500}],
        
        "uses-text-compression": "error",
        "uses-responsive-images": "warn",
        "offscreen-images": "warn",
        "render-blocking-resources": ["warn", {"maxNumericValue": 1000}],
        "unused-css-rules": ["warn", {"maxNumericValue": 30000}],
        "unused-javascript": ["warn", {"maxNumericValue": 50000}],
        
        "dom-size": ["warn", {"maxNumericValue": 2000}],
        "bootup-time": ["warn", {"maxNumericValue": 4000}],
        "mainthread-work-breakdown": ["warn", {"maxNumericValue": 3000}],
        
        "meta-description": "error",
        "document-title": "error",
        "html-has-lang": "error",
        "html-lang-valid": "error",
        "link-text": "error",
        "is-crawlable": "error"
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}