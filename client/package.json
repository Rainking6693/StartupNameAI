{
  "name": "startupnamer-client",
  "version": "1.0.0",
  "private": true,
  "homepage": "https://startupnamer.org",
  "dependencies": {
    "@stripe/react-stripe-js": "^2.3.0",
    "@stripe/stripe-js": "^2.1.0",
    "axios": "^1.6.0",
    "framer-motion": "^10.16.0",
    "js-cookie": "^3.0.5",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^6.0.0",
    "react-helmet-async": "^1.3.0",
    "react-hot-toast": "^2.4.0",
    "react-router-dom": "^6.20.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.23.0",
    "@lhci/cli": "^0.12.0",
    "@playwright/test": "^1.40.0",
    "@tailwindcss/forms": "^0.5.6",
    "@tailwindcss/typography": "^0.5.10",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.0",
    "@axe-core/cli": "^4.8.0",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^29.7.0",
    "eslint": "^8.50.0",
    "eslint-config-react-app": "^7.0.1",
    "html-validate": "^8.7.0",
    "http-server": "^14.1.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-sonar-reporter": "^2.0.0",
    "jest-watch-typeahead": "^2.2.2",
    "jsdom": "^23.0.0",
    "netlify-cli": "^17.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.0.0",
    "react-snap": "^1.23.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.2.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:snap": "react-scripts build && react-snap",
    "postbuild": "echo 'Build completed. Run npm run snap to prerender.'",
    "snap": "react-snap",
    "test": "react-scripts test",
    "test:ci": "react-scripts test --coverage --watchAll=false --testResultsProcessor=jest-sonar-reporter",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "eject": "react-scripts eject",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src/ --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "validate:html": "node ../scripts/validate-html.js build",
    "validate:seo": "node ../scripts/validate-seo.js build",
    "lighthouse:local": "lhci autorun --config=../lighthouserc.json",
    "serve": "npx http-server build -p 3000 -s",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "a11y": "axe http://localhost:3000 --exit"
  },
  "reactSnap": {
    "inlineCss": true,
    "minifyHtml": {
      "collapseWhitespace": false,
      "removeComments": false
    },
    "crawlFrom": "/",
    "include": [
      "/",
      "/naming-tool",
      "/features", 
      "/pricing",
      "/how-it-works",
      "/examples",
      "/faq",
      "/contact",
      "/blog",
      "/privacy-policy",
      "/terms-of-service",
      "/tech-startup-names",
      "/saas-startup-names",
      "/fintech-startup-names",
      "/healthcare-startup-names",
      "/ai-startup-names",
      "/ecommerce-startup-names"
    ],
    "skipThirdPartyRequests": true,
    "cacheAjaxRequests": false,
    "waitFor": 3000,
    "fixWebpackChunksIssue": "CRA2",
    "removeBlobs": true,
    "fixInsertRule": true,
    "preconnectThirdParty": false,
    "removeStyleTags": false,
    "puppeteerArgs": [
      "--no-sandbox",
      "--disable-setuid-sandbox",
      "--disable-web-security",
      "--disable-features=VizDisplayCompositor"
    ],
    "puppeteerExecutablePath": null,
    "puppeteerLaunchOptions": {
      "headless": true,
      "args": [
        "--no-sandbox",
        "--disable-setuid-sandbox",
        "--disable-web-security",
        "--disable-features=VizDisplayCompositor",
        "--disable-gpu",
        "--disable-dev-shm-usage",
        "--disable-extensions",
        "--no-zygote",
        "--single-process"
      ]
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
