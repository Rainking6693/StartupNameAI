# Force legacy peer deps resolution
legacy-peer-deps=true

# Skip preflight checks that cause TypeScript version conflicts
SKIP_PREFLIGHT_CHECK=true

# React-specific build optimizations
FAST_REFRESH=true
BROWSER=none

# Disable audit to speed up installs
audit=false

# Disable funding messages
fund=false

# Use exact versions for build stability
save-exact=true

# Enable parallel downloads for faster installs
maxsockets=15
registry=https://registry.npmjs.org/

# Timeout settings for network issues
fetch-timeout=300000
fetch-retries=5

# Disable workspaces entirely for this client
workspaces=false

# Cache settings for build performance
prefer-online=true

# React build environment variables
CI=false
GENERATE_SOURCEMAP=false
DISABLE_ESLINT_PLUGIN=false